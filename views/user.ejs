<!DOCTYPE html>
<html lang="es">

<!-- header -->
<%- include('./partials/header') %>
<!-- header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/avatar/<%-data.imagen_perfil%>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> 
						<a href="/users/edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="/users/edit">EDITAR PERFIL</a>
				</div>
				<div>
					<ul class="">
						<li><%-data.nombre%></li>
						<li><%-data.email%></li>
						<li> <%-data.buzos.length%> productos</li>
						<li> <%-data.comentarios.length%> comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<% for(let i=0; i<data.buzos.length; i++){ %>
			<div class="col-12 col-sm-6 col-lg-3">
			   <section class="product-box">
				   <a href="/product/id/<%= data.buzos[i].id %>">
					   <figure class="product-box_image">
						   <img src="images/buzos/<%= data.buzos[i].image %>" alt="">
					   </figure>
					   <article class="product-box_data">
						   <h2><%= data.buzos[i].nombre_producto %> </h2>
						   <p><%= data.buzos[i].comentario %></p>
					   </article>
				   </a>
			   </section>
		   </div> 
		   <% } %>
		</div>
	
				
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->

</body>	
</html>